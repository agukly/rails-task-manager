  <%= form_for(@task) do |f| %>
    <div class="form-group">
    <%= f.label :title, class: 'mt-3' %>
    <%= f.text_field :title, class: 'form-control d-block mt-1 mb-1 w-100' %>
  </div>

  <div class="form-group">
    <%= f.label :details, class: 'mt-3' %>
    <%= f.text_field :details, class: 'form-control d-block mt-1 mb-1 w-100'  %>
  </div>

   <div class="form-group form-check">
    <%= f.check_box(:completed, class: 'form-check-input') %>
    <%= label_tag(:completed, "Mark as completed", class: 'form-check-label') %>
  </div>
  <%= f.submit class: 'btn btn-primary d-block mt-3 mb-3' %>
<% end %>

